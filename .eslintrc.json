{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "settings": {
        "import/resolver": {
            "alias": {
            "map": [
                ["@", "./app/frontend"],
                ["@components", "./app/frontend/components"]
            ]
            },
            "webpack": {
                "config": "./config/webpack/environment.js"
            }
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
    }
}
